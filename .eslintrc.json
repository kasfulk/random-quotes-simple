{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"
                ],
                "extensions": [".js", ".ts", ".d.ts", ".tsx"
                ]
            }
        }
    },   
      "rules": { 
          "no-console": "off",
          "linebreak-style": "off",
          "no-use-before-define" : "off",
          "@typescript-eslint/no-use-before-define": "warn",
          "import/extensions": "off"
    }
}
